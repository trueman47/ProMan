
<%= form_for :customer, url: customers_path do |f| %>
  <p>
    <%= f.label :CustomerName %><br>
    <%= f.text_field :CustomerName %>
  </p>
  
  <p>
    <%= f.label :Industry %><br>
    <%= f.text_field :Industry %>
  </p>
  
  <p>
    <%= f.label :Email %><br>
    <%= f.text_field :Email %>
  </p>
  
  <p>
    <%= f.label :Phone %><br>
    <%= f.text_field :Phone %>
  </p>
 
  <p>
    <%= f.label :Notes %><br>
    <%= f.text_area :Notes %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>